<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
 

                <section class="post">
                    <header class="post-header">
                        <img width="48" height="48" alt="Eric Ferraiuolo&#x27;s avatar" class="post-avatar" src="/img/common/ericf-avatar.png">

                        <h2 class="post-title"><a href="/post/{{post.id}}">{{post.title}}</a></h2>

                        <p class="post-meta">
                            By <a class="post-author" href="#">{{post.user.username}}o{{format_date post.date_created}}</a>
                        </p>
                    </header>

                    <div class="post-content">
                        <p>
                            {{post.content}}
                        </p>
                    </div>
                </section>
            </div>
{{/each}}
